<h2>My Profile</h2>

<div class="card p-4 shadow">
  <% if @user.profile_photo.attached? %>
    <%= image_tag @user.profile_photo, size: "120x120", class: "rounded-circle mb-3" %>
  <% else %>
    <%= image_tag "default_profile.png", size: "120x120", class: "rounded-circle mb-3" %>
  <% end %>

  <p><strong>Name:</strong> <%= @user.name %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>

  <%= link_to "Edit Profile", edit_admin_profile_path, class: "btn btn-primary mt-3" %>
</div>
