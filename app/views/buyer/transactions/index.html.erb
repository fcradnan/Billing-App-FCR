<h1>Your Transactions</h1>

<table >
  <tr>
    <th>Type</th>
    <th>Amount</th>
    <th>Date</th>
  </tr>

  <% @transactions.each do |t| %>
    <tr>
      <td><%= t.transaction_type %></td>
      <td><%= t.amount %></td>
      <td><%= t.transaction_date %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Back to Dashboard", buyer_dashboard_path %>
